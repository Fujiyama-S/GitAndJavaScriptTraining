{
  "scripts": {
    "lint": "eslint src --fix; exit 0",
    "test": "eslint src"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ],
      "no-console": [
        "off"
      ]
    }
  },
  "devDependencies": {
    "eslint": "^4.19.1"
  }
}
