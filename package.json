{
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "plugins": [
      "prettier"
    ],
    "root": true,
    "rules": {
      "no-console": [
        "off"
      ],
      "no-var": [
        "error"
      ],
      "prettier/prettier": [
        "error",
        {
          "semi": false,
          "singleQuote": true
        }
      ]
    }
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "prettier": "^1.12.1"
  },
  "scripts": {
    "lint": "eslint src --fix; exit 0",
    "test": "eslint src"
  }
}
